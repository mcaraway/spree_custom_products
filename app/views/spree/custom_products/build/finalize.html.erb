<% content_for :subheader do %> <h1 style="border-bottom: 1px solid #ccc"><%= t(:make_your_own_blend) %></h1>
<% end %>
<% content_for :head do -%>
<meta name="title" content="Blend It">
<% end -%>
<%=form_for @custom_product, :url => wizard_path, :method => :put do |f| %>
<%= render 'spree/shared/error_messages', :target => f.object %>

<%= render :partial => 'flavor_profile', :locals => { :f => f, :editing => true } %>
<div class="row">
	<div class="span7">
		<h1 class="product-title" itemprop="name"><%= @custom_product.name %></h1>
		<%= f.hidden_field :name %>
		<div itemprop="description" data-hook="description">
			<%= custom_product_description(@custom_product) rescue Spree.t(:product_has_no_description) %>
		</div>
		<br />
		<%= f.submit t(:order_it) %>
	</div>
	<div class = "span9">
		<div class="span4">
			<%= render :partial => "tea_label" %>
		</div>
		<div class="span4">
			<%= render :partial => "tea_tin" %>
		</div>
	</div>

</div>
<div style="float: right;margin-top: 20px;">
	<%= f.submit t(:order_it) %>
</div>

<% end %>
</div>