<div class="row tea_cups_div" style="min-height: 200px;">
	<div class="span3">
		<% if @edit_blend == nil || @edit_blend == false %> <img src="/assets/store/icons/2.png" width="24" height="24" >&nbsp;
		<% end %>Your unique blend will taste like this.
	</div>
	<div class="span3">
		<div id="flavor1namediv">
			<%= @custom_product.flavor_1_name.blank? ? "Select Above": @custom_product.flavor_1_name %>
		</div>
		<%= f.hidden_field :flavor_1_name, :id => "flavor1" %>
		<%= f.hidden_field :flavor_1_sku, :id => "sku1" %>
		<div id="flavor2namediv">
			<%= @custom_product.flavor_2_name.blank? ? "Select Above": @custom_product.flavor_2_name %>
		</div><%= f.hidden_field :flavor_2_name, :id => "flavor2" %>
		<%= f.hidden_field :flavor_2_sku, :id => "sku2" %>
		<div id="flavor3namediv">
			<%= @custom_product.flavor_3_name.blank? ? "Select Above": @custom_product.flavor_3_name %>
		</div><%= f.hidden_field :flavor_3_name, :id => "flavor3" %>
		<%= f.hidden_field :flavor_3_sku, :id => "sku3" %>
	</div>
	<div class="span4">
		<div id="slider1"></div><div id="slider2"></div><div id="slider3"></div>
	</div>
	<div class="span1">
		<div id="flavor1percentdiv">
			<%= @custom_product.flavor_1_percentage.blank? ? "0%": @custom_product.flavor_1_percentage.to_s + "%" %>
		</div>
		<%= f.hidden_field :flavor_1_percentage, :id => "percent1" %>
		<div id="flavor2percentdiv">
			<%= @custom_product.flavor_2_percentage.blank? ? "0%": @custom_product.flavor_2_percentage.to_s + "%" %>
		</div>
		<%= f.hidden_field :flavor_2_percentage, :id => "percent2" %>
		<div id="flavor3percentdiv">
			<%= @custom_product.flavor_3_percentage.blank? ? "0%": @custom_product.flavor_3_percentage.to_s + "%" %>
		</div>
		<%= f.hidden_field :flavor_3_percentage, :id => "percent3" %>
	</div>
	<div class="span4 tea-cup-list" id="flavor_profile_row">
		<table id="flavor_profile_table" style="width:100%;">
			<tbody>
				<tr>
					<td style="width:20%;">aroma:
					<br>
					</td><td><img src="/assets/store/star_0.png" width="150px" height="22px">
					<br>
					</td>
				</tr>
				<tr>
					<td style="width:20%;">nutty:
					<br>
					</td><td><img src="/assets/store/star_0.png" width="150px" height="22px">
					<br>
					</td>
				</tr>
				<tr>
					<td style="width:20%;">sweetness:
					<br>
					</td><td><img src="/assets/store/star_0.png" width="150px" height="22px">
					<br>
					</td>
				</tr>
				<tr>
					<td style="width:20%;">strength:
					<br>
					</td><td><img src="/assets/store/star_0.png" width="150px" height="22px">
					<br>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>