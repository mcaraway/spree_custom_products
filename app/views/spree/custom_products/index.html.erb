<% content_for :subheader do %>
	<img src="https://s3.amazonaws.com/uniqteas/images/categories/categories-custom-blend.jpg" alt="Custom Blends" width="100%" %>
<% end %>

<% content_for :sidebar do %>
  <div data-hook="homepage_sidebar_navigation">
    <% if "spree/custom_products" == params[:controller] && @taxon %>
      <%= render :partial => 'spree/shared/filters' %>
    <% else %>
      <%= render :partial => 'spree/shared/taxonomies' %>
    <% end %>
  </div>
<% end %>

<% if params[:keywords] %>

  <div data-hook="search_results">
    <% if @custom_products.empty? %>
      <h6 class="search-results-title"><%= Spree.t(:no_products_found) %></h6>
    <% else %>
      <%= render :partial => 'custom_products_list', :locals => { :products => @custom_products, :taxon => @taxon } %>
    <% end %>
  </div>

<% else %>

  <div data-hook="homepage_products">
    <%= render :partial => 'custom_products_list', :locals => { :products => @custom_products, :taxon => @taxon } %>
  </div>
<% end %>